<h4 class="head-4">
     New Car Info</h4>
    
<%if(errors.length > 0){%>
    <%for(var i=0; i< errors.length; i++) {%>
      <div  class="alert alert-danger"> <%=errors[i]%></div>
    <%}%>
<%}%>
<%if(success.length > 0){%>
   
      <div  class="alert alert-success"> <%=success%></div>
<%}%>
<form  action="/register_c" method="POST" class="needs-validation col-6" style="padding-left: 70px; font-size: 20px;" novalidate>
    
    <div class="form-group">
        <label>Car Id</label>
        <input required class="form-control col-6" type="text" name="carid" placeholder="Enter Car ID">
        <div class="invalid-feedback">
            Please choose a Id.
          </div>
    </div>
    <div class="form-group">
        <label>Color</label>
        <input class="form-control col-6" required type="text" name="carcolor" placeholder="Enter Car Color">
        <div class="invalid-feedback">
            Please choose the Car Color.
          </div>
    </div>
    <div class="form-group">
        <label>Company</label>
        <input class="form-control col-6" required type="text" name="car_company" placeholder="Enter Car Company">
        <div class="invalid-feedback">
            Please choose a Car Company.
          </div>
    </div>
    <div class="form-group">
        <label>Car Model</label>
        <input class="form-control col-6" required type="text" name="carmodel" placeholder="Enter Car Model">
        <div class="invalid-feedback">
            Please choose a Car Model.
          </div>
    </div>
    <div class="form-group">
        <label>Car Owner</label>
        <input class="form-control col-6" required type="text" name="carowner" placeholder="Enter Car Owner">
        <div class="invalid-feedback">
            Please choose a Car Owner.
          </div>
    </div>
    <div class="form-group">
        
        <input class="btn btn-primary col-3" type="submit" value="Click to Register">

    </div>
</form>
<br>